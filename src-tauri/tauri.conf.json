{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Nova",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "window": {
        "all": false,
        "create": true,
        "close": true,
        "hide": true,
        "center": true,
        "print": false,
        "minimize": true,
        "maximize": true,
        "setAlwaysOnTop": true,
        "setClosable": true,
        "setResizable": true,
        "setFocus": false,
        "setTitle": true,
        "setDecorations": true,
        "setSize": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "publisher": "Sandun Wiratunga",
      "category": "Utility",
      "copyright": "Sandun Wiratunga",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "Nova",
      "shortDescription": "Nova",
      "longDescription": "Nova is an AI assistant created to enhance Windows experience",
      "resources": [],
      "externalBin": [],
      "targets": [
        "msi",
        "updater"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "allowDowngrades": false,
        "wix": {
          "language": "en-US"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false,
      "dialog": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": ""
    },
    "windows": [
      {
        "title": "Nova",
        "minWidth": 800,
        "minHeight": 600,
        "fullscreen": false,
        "focus": true,
        "resizable": true,
        "decorations": false,
        "center": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
